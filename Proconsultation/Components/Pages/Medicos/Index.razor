@page "/medicos"
@inherits IndexPage

<MudText Typo="Typo.h3">Médicos</MudText>

<MudButton Variant="Variant.Filled"
           StartIcon="@Icons.Material.Filled.Add"
           Color="Color.Info"
           Size="Size.Small"
           Href="/medicos/create"
           Class="mt-md4 mb-4">Novo Médico</MudButton>

<MudDataGrid Items="@Medicos" Filterable="false" SortMode="@SortMode.Single" Groupable="false">
    <Columns>
        <PropertyColumn Property="z=>z.Nome"/>
        <PropertyColumn Property="z=>z.Documento" Title="Documento"/>
        <PropertyColumn Property="z=>z.Crm" Title="CRM"/>
        <PropertyColumn Property="z=>z.Celular" Title="Celular"/>
        <PropertyColumn Property="z=>z.Especialidade.Nome" Title="Especialidade"/>
        <TemplateColumn CellClass="d-flex justify-center">
            <CellTemplate>
                <MudStack Row>
                    <MudFab Size="Size.Small"
                            Label="Editar"
                            hidden="@HideButtons"
                            @onclick="@(()=>GoToUpdate(context.Item.Id))"
                            StartIcon="@Icons.Material.Filled.Edit"
                            Color="Color.Success"></MudFab>
                    <MudFab Size="Size.Small"
                            Label="Apagar"
                            hidden="@HideButtons"
                            @onclick="@(()=>DeleteMedicoAsync(context.Item))"
                            StartIcon="@Icons.Material.Filled.Delete"
                            Color="Color.Error"></MudFab>
                </MudStack>
            </CellTemplate>
        </TemplateColumn>
    </Columns>
</MudDataGrid> 